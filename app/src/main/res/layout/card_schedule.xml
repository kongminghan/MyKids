<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_cardHolder"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/day"
                    android:textAppearance="@android:style/TextAppearance.Material.Large"
                    android:textStyle="normal"
                    android:textSize="26sp"
                    android:textAlignment="center"
                    android:textColor="@color/blue" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/day_word"
                    android:textAppearance="@android:style/TextAppearance.Material.Small"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/dot_dark_screen2" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/card_margin"
                android:elevation="5dp"
                card_view:cardCornerRadius="@dimen/card_album_radius"
                card_view:cardElevation="1dp"
                android:layout_width="220dp">

                <RelativeLayout
                    android:id="@+id/rlSchedule"
                    android:layout_width="match_parent"
                    android:background="@color/schedule"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:transitionName="tScheduleHolder">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BCG vaccination"
                        android:id="@id/title"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1"
                        android:textColor="@color/white"
                        android:layout_margin="6dp"
                        android:textStyle="normal|bold" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/status"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

        </LinearLayout>
</layout>
