<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llak"
    android:background="@color/grey"
    android:padding="0dp">


    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/ivAddKid"
            android:src="@drawable/default_kid"
            android:clickable="true"
            android:layout_height="200dp"
            android:layout_width="200dp" />

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ivAddKid"
            android:layout_alignTop="@+id/ivAddKid"
            android:layout_alignRight="@+id/ivAddKid"
            android:layout_alignBottom="@+id/ivAddKid"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="Tap to change"
            android:textColor="@color/white"
            android:breakStrategy="balanced"
            android:textSize="14sp"
            android:textStyle="normal|bold" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/circularImageView2"
        android:layout_gravity="center"
        android:layout_width="250dp">

        <EditText
            android:id="@+id/input_kid_name"
            android:layout_height="wrap_content"
            android:hint="Kid's name"
            android:textSize="14sp"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_date"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/input_layout_name"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_name"
        android:layout_gravity="center"
        android:layout_width="250dp">

        <EditText
            android:id="@+id/input_kid_date"
            android:layout_height="wrap_content"
            android:hint="Birth date"
            android:focusable="false"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_weight="1" />
    </android.support.design.widget.TextInputLayout>

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/spinner_gender"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/input_layout_date"
        app:layout_constraintTop_toBottomOf="@+id/input_layout_date"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_gravity="center"
        android:layout_width="250dp" />


    <Button
        android:id="@+id/btn_kid_add"
        android:text="Add your child"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        android:layout_gravity="bottom"
        android:layout_height="70dp" />

</LinearLayout>

